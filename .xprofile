#!/bin/sh

userresources=$HOME/.Xresources
usermodmap=$HOME/.Xmodmap
sysresources=/etc/X11/xinit/.Xresources
sysmodmap=/etc/X11/xinit/.Xmodmap

# merge in defaults and keymaps

if [ -f $sysresources ]; then
    xrdb -merge $sysresources
fi

if [ -f $sysmodmap ]; then
    xmodmap $sysmodmap
fi

if [ -f "$userresources" ]; then
    xrdb -merge "$userresources"
fi

if [ -f "$usermodmap" ]; then
    xmodmap "$usermodmap"
fi

# start some nice programs

if [ -d /etc/X11/xinit/xinitrc.d ] ; then
 for f in /etc/X11/xinit/xinitrc.d/?*.sh ; do
  [ -x "$f" ] && . "$f"
 done
 unset f
fi

# configure monitors (1st full hd, 2nd to right 1280x1024 4:3)
xrandr --output DVI-D-0 --mode 1280x1024 --pos 1920x210 --rotate normal --output HDMI-0 --off --output DP-0 --primary --mode 1920x1080 --pos 0x0 --rotate normal --output DP-1 --off &
xsetroot -name "$(date +"%F")"  # dwm status
# set wallpaper for 2 monitors
feh --bg-center ~/.config/wallpaper.jpg --bg-center ~/.config/wallpaper.jpg &
redshift -P -O 3500 &           # night light
librewolf &
st -e nvim &
~/.config/scripts/trash.sh &
